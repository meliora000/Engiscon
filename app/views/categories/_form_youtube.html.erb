  <div class="impress">
    <iframe src = "<%= embed(@posts.first.url) %>
 "></iframe>
    <a class="waves-effect waves-light btn-floating black modal-trigger modal-position" href="#modal<%= @posts.first.id %>">
      <i class="material-icons">info_outline</i></a>
    </a>
  </div>


  <!-- Modal Structure -->
  <div id="modal<%= @posts.first.id %>" class="modal bottom-sheet">
    <div class="modal-content">
      <h4><%= @posts.first.title %></h4>
      <p><%= simple_format(@posts.first.content) %></p>
