  <div class="sub">
    <ul>
  <% @posts.each do |post| %>
        <li>
          <div class="video-position">
            <iframe src = "<%= embed(post.url) %>">
            </iframe>

            <a class="waves-effect waves-light btn-floating black modal-trigger modal-position" href="#modal<%= post.id %>">
              <i class="material-icons">info_outline</i></a>
            </a>
          </div>


          <!-- Modal Structure -->
          <div id="modal<%= post.id %>" class="modal bottom-sheet">
            <div class="modal-content">
              <h4><%= post.title %></h4>
              <p><%= simple_format(post.content) %></p>
            </div>
          </div>
        </li>
    <% end %>
      </ul>
