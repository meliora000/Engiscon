<div class="container">
  <div class="section">

    <!--   All Post   -->
    <% Post.all.each do |post| %>
      <div class="row">
        <div class="col s12">
          <h5><%= post.title %> // <%= post.category.option %></h5>

          <!-- MAIN Option 별 디자인-->
          <% if post.category.option.include?("Video") %>
              <div class="plyr materialboxed">
                <div data-video-id="<%= embed(post.url) %>" data-type="youtube"></div>
              </div>
          <% elsif post.category.option.include?("Photo") %>
            <img class="materialboxed" src="<%= post.url %>" width="100%">

          <% end %>


          <!-- SUB Option 디자인 -->
          <div class="sub">
            <% if post.category.option.include?("History") %>
                  <% @suboption = "History" %>
                  <a class="btn-floating btn-small teal sub"><i class="material-icons">comment</i></a>
                  <div class="comment">
                    <% @post = post %>
                    <%= render "comments/comments" %>
                  </div>
            <% end %>

            <% if post.category.option.include?("Log") %>
                <% @suboption = "Log" %>
                  <p class="element" style="display: none;">History</p>
                  <a class="btn-floating btn-small teal sub"><i class="material-icons">replay</i></a>
                  <div class="comment">
                    <% @post = post %>
                    <%= render "comments/comments" %>
                  </div>
            <% end %>
          </div>



        </div>
      </div>
    <% end %>
  </div>
</div>


<script>
  $(document).ready(function(){
    plyr.setup();
    $('.materialboxed').materialbox();
    $(".plyr__controls").click(function(){
    })
  });


</script>
